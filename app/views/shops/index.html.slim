= link_to t('shops.new_shop'), new_shop_path,
  class: 'btn btn-success pull-right'

= render 'searches/form'

table.table.table-striped
  thead
    tr
      th(colspan=2)= t('shops.input')
      th(colspan=2)= t('shops.output')
      th= t('shops.exchanges_available')
      th= t('shops.location')
      th(colspan=2)= t('reports.reports')
  tbody
    = render @shops

= paginate @shops
